# Azure Synapse Configuration
SYNAPSE_SERVER=your-synapse-workspace.sql.azuresynapse.net
SYNAPSE_DATABASE=your_database_name
SYNAPSE_USERNAME=your_sql_username
SYNAPSE_PASSWORD=your_sql_password
USE_MANAGED_IDENTITY=false

# SharePoint Configuration
SHAREPOINT_SITE_URL=https://yourtenant.sharepoint.com/sites/yoursite
SHAREPOINT_LIST_NAME=YourListName

# Azure AD Application Registration
TENANT_ID=your-tenant-id-here
CLIENT_ID=your-client-id-here
CLIENT_SECRET=your-client-secret-here

# Query Configuration
# SQL query to extract data from Synapse
SYNAPSE_QUERY=SELECT id, name, value, created_date FROM your_table WHERE status='active'

# Batch size for SharePoint operations (1-1000)
BATCH_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO

# Field Mapping (JSON format)
# Maps Synapse column names to SharePoint field names
# Example: {"synapse_column": "SharePointField", "another_column": "AnotherField"}
FIELD_MAPPING={"id": "ID", "name": "Title", "value": "Value", "created_date": "CreatedDate"}
